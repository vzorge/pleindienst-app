/*place global styles here */

html, body { @apply h-full; }

@font-face {
	font-family: 'Space Grotesk';
	src: url('/fonts/SpaceGrotesk.ttf');
	font-display: swap;
}

:root {
	--theme-rounded-base: 20px;
	--theme-rounded-container: 4px;
    --color-text: rgba(0, 0, 0, 0.7);
    color: var(--color-text);
}

.radio-group > label {
    flex-grow: 1;
}
